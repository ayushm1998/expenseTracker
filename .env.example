# Copy to .env and edit if you want
PORT=3000

# =========================
# Database
# =========================
# Recommended (for hosting / Supabase): Postgres connection string
# Set this in your local `.env` (gitignored) and on your host (e.g., Vercel env vars).
# Example format:
# DATABASE_URL=postgresql://postgres:<PASSWORD>@db.<project-ref>.supabase.co:5432/postgres?sslmode=require
DATABASE_URL=

# Legacy local dev option (SQLite). If DATABASE_URL is set, it will be used instead.
DB_PATH=./data/expenses.sqlite

# Optional: default currency label
# NOTE: The app now defaults to USD unless the message explicitly specifies INR.
CURRENCY=USD

# WhatsApp (Meta Cloud API) webhook settings (optional)
# Used by GET /webhook/whatsapp verification handshake
WHATSAPP_VERIFY_TOKEN=

# Optional signature verification for POST /webhook/whatsapp
# If set, requests must include X-Hub-Signature-256.
WHATSAPP_APP_SECRET=
