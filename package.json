{
  "name": "expense-ingest-tracker",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "dev:client": "vite",
    "dev:clean": "node scripts/dev-clean.mjs",
    "db:reset": "node scripts/db-reset.mjs",
    "build": "tsc -p tsconfig.json",
    "build:client": "vite build",
    "start": "node dist/server.js",
    "smoke:pg": "tsx scripts/pg-smoke.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint .",
    "format": "prettier -w .",
    "typecheck": "tsc -p tsconfig.test.json"
  },
  "dependencies": {
    "@vercel/node": "^3.2.22",
    "better-sqlite3": "^11.8.1",
    "dotenv": "^16.4.7",
    "express": "^4.19.2",
    "pg": "^8.18.0",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.20.0",
    "@types/better-sqlite3": "^7.6.13",
    "@types/express": "^4.17.21",
    "@types/node": "^22.13.4",
    "@types/pg": "^8.16.0",
    "eslint": "^9.20.1",
    "prettier": "^3.5.0",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3",
    "vite": "^5.4.21",
    "vitest": "^2.1.9"
  }
}
